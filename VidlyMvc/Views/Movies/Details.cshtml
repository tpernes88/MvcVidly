@model VidlyMvc.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.GenreName</li>
    <li>Release Date: @Model.ReleaseDate.ToLongDateString()</li>
    <li>Date Added: @Model.DateAddedDb.ToLongDateString()</li>
    <li>Numver in Stock: @Model.NumberInStock</li>
</ul>

